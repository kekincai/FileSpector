<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FileSpector.ViewModels"
        xmlns:models="using:FileSpector.Models"
        xmlns:converters="using:FileSpector.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="FileSpector.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="FileSpector - File Analyzer"
        Width="1200" Height="800"
        MinWidth="900" MinHeight="600"
        Background="#1a1a2e">

    <Window.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Window.Styles>
        <!-- Custom Button Style -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#818cf8"/>
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#4b5563"/>
        </Style>

        <!-- Card Panel -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Section Header -->
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#f1f5f9"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style Selector="TextBlock.subtext">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#0f172a" Padding="24,16">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Logo and Title -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="ðŸ”" FontSize="28" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="FileSpector" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Analyze your disk space" Classes="subtext"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="#94a3b8" 
                               FontSize="14"
                               IsVisible="{Binding !IsScanning}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding IsScanning}">
                        <ProgressBar IsIndeterminate="True" Width="120" Height="4"/>
                        <TextBlock Text="{Binding CurrentScanFile}" 
                                   Foreground="#94a3b8" 
                                   FontSize="12"
                                   MaxWidth="300"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                    <Button Classes="primary" 
                            Command="{Binding SelectFolderCommand}"
                            IsEnabled="{Binding !IsScanning}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ“‚" FontSize="16"/>
                            <TextBlock Text="Select Folder"/>
                        </StackPanel>
                    </Button>
                    <Button Classes="secondary" Command="{Binding ToggleThemeCommand}">
                        <TextBlock Text="ðŸŒ™" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="350,*" Margin="16">
            <!-- Left Panel - Categories -->
            <Border Classes="card" Margin="0,0,8,0">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Text="ðŸ“Š Storage by Category" Classes="header"/>
                    
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FileCategory">
                                    <Border Background="#1e293b" 
                                            CornerRadius="8" 
                                            Padding="16,12" 
                                            Margin="0,0,0,8">
                                        <Grid RowDefinitions="Auto,Auto,Auto">
                                            <!-- Category Header -->
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding Icon}" FontSize="20"/>
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="15" 
                                                               FontWeight="SemiBold"
                                                               Foreground="#f1f5f9"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding FileCount, StringFormat={}{0} files}"
                                                           FontSize="12" Foreground="#94a3b8"/>
                                            </Grid>
                                            
                                            <!-- Size Bar -->
                                            <Grid Grid.Row="1" Margin="0,10,0,4">
                                                <Border Background="#374151" 
                                                        Height="8" 
                                                        CornerRadius="4"/>
                                                <Border Background="{Binding Color}" 
                                                        Height="8" 
                                                        CornerRadius="4"
                                                        HorizontalAlignment="Left"
                                                        MinWidth="20"/>
                                            </Grid>
                                            
                                            <!-- Size Text -->
                                            <TextBlock Grid.Row="2" 
                                                       Text="{Binding TotalSizeFormatted}"
                                                       FontSize="14" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#10b981"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Panel - Files -->
            <Border Grid.Column="1" Classes="card" Margin="8,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,12">
                        <TextBlock Text="ðŸ“‹ Largest Files" Classes="header"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding LargestFiles.Count, StringFormat=Showing {0} files}"
                                   Classes="subtext"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding LargestFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:FileNode">
                                    <Border Background="#1e293b" 
                                            CornerRadius="8" 
                                            Padding="16,12"
                                            Margin="0,0,0,8"
                                            BorderThickness="2"
                                            BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}">
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                            <!-- Checkbox -->
                                            <CheckBox IsChecked="{Binding IsSelected}" 
                                                      Margin="0,0,12,0"
                                                      VerticalAlignment="Center"/>
                                            
                                            <!-- File Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding Icon}" FontSize="16"/>
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="14" 
                                                               FontWeight="Medium"
                                                               Foreground="#f1f5f9"
                                                               TextTrimming="CharacterEllipsis"
                                                               MaxWidth="350"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding FullPath}" 
                                                           FontSize="11"
                                                           Foreground="#64748b"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="350"
                                                           Margin="24,4,0,0"/>
                                            </StackPanel>
                                            
                                            <!-- Size -->
                                            <Border Grid.Column="2" 
                                                    Background="#10b981" 
                                                    CornerRadius="4"
                                                    Padding="10,4"
                                                    Margin="12,0"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding SizeFormatted}" 
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"/>
                                            </Border>
                                            
                                            <!-- Date -->
                                            <TextBlock Grid.Column="3" 
                                                       Text="{Binding LastModified, StringFormat={}{0:yyyy-MM-dd}}"
                                                       FontSize="12" Foreground="#94a3b8"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer - Action Bar -->
        <Border Grid.Row="2" Background="#0f172a" Padding="24,16">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <!-- Selection Info -->
                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                    <TextBlock Foreground="#94a3b8" VerticalAlignment="Center">
                        <Run Text="Selected: "/>
                        <Run Text="{Binding SelectedFileCount}" FontWeight="Bold" Foreground="#f1f5f9"/>
                        <Run Text=" files"/>
                    </TextBlock>
                    <Border Background="#374151" Width="1" Height="20"/>
                    <TextBlock Foreground="#94a3b8" VerticalAlignment="Center">
                        <Run Text="Total Size: "/>
                        <Run Text="{Binding TotalSelectedSizeFormatted}" FontWeight="Bold" Foreground="#ef4444"/>
                    </TextBlock>
                </StackPanel>

                <!-- Clear Selection -->
                <Button Grid.Column="1" 
                        Classes="secondary" 
                        Margin="0,0,12,0"
                        Command="{Binding ClearSelectionCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="âœ•"/>
                        <TextBlock Text="Clear"/>
                    </StackPanel>
                </Button>

                <!-- Delete Button (Preview only - does not actually delete) -->
                <Button Grid.Column="2" 
                        Background="#dc2626"
                        Foreground="White"
                        Padding="20,12"
                        CornerRadius="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ—‘ï¸" FontSize="16"/>
                        <TextBlock Text="Preview Delete" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
